<%= form_for(contact) do |f| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= @user.id %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id, value: @user.id %>
  </div>
    
    <%= f.fields_for :contact_custom do |cc| %>
      <% @usercustom.each do |custom| %>
        <div class="field">
          <%= cc.hidden_field :custom_id, value: custom.id.to_i %>

          <%= cc.label custom.name %>
          <%= cc.text_field :value %>


        </div>
      <% end %>
    <% end %>

     <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
